<document>
	<stackTemplate theme="dark" class="darkBackgroundColor">
		<collectionList>
			<shelf>
				<header class="homeCategory"><title >Ultimi Film aggiunti</title></header>
				<section>
					{{#each movies }}
					<lockup data-href-page="movie-details" data-href-page-options="{{toJSON this }}">
						<img class="tile" src="{{poster_url poster_path }}"/>
						<title class="showAndScrollTextOnHighlight">{{ title }}</title>
					</lockup>
					{{/each}}
				</section>
			</shelf>
			<shelf>
				<header><title class="homeCategory">Ultime Serie TV aggiornate</title></header>
				<section>
					{{#each tvShows }}
					<lockup data-href-page="tvshow-details" data-href-page-options="{{toJSON this }}">
						<img class="tile" src="{{poster_url poster_path }}"/>
						<title class="showAndScrollTextOnHighlight">{{ title }}</title>
					</lockup>
					{{/each}}
				</section>
			</shelf>
		</collectionList>
	</stackTemplate>
</document>